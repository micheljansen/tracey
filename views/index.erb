<!doctype html>
<html>
<head>
<title>MA progress</title>
<style type="text/css">
  * {
    margin: 0;
    padding: 0;
    border: 0;
    -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
    -moz-box-sizing: border-box;    /* Firefox, other Gecko */
    box-sizing: border-box;         /* Opera/IE 8+ */

  }
  body {
    font-family: "Interstate Mazda", "Interstate", "Helvetica";
    padding: 3%;
    line-height: 1.5;
  }
  p, h1, h2 {
    margin: 1em 0; padding: 0;
  }

  aside h1 {
    margin: 0;
    font-size: 1.5em;
  }
  aside h2 {
    margin-top: 0;
    font-size: 1em;
    font-weight: normal;
    font-style: italic;
  }


@media screen {
  .page {
    position: relative;
    margin-bottom: 5%;
  }
  .subject {
    width: 50%;
  }

  .subject img {
    max-width: 100%;
  }

  aside {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 50%;
    border: solid 1px #ccc;
    padding: 2%;
  }

  ol,ul {
    list-style-position:inside;
  }

  #toc {
    padding-bottom: 2em;
  }
  #toc td {
    padding-left: 1em;
  }

  #toc h1 {
    text-align: center;
  }
  #toc table {
    margin: 0 auto;
  }
  #toc a, #toc a:active, #toc a:visited {
    color: #999;
  }
}

@media screen and (min-width: 1200px) {
  #toc {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: 20%;
    z-index: 1000;
  }
  #toc h1 {
    margin: 0.25em;
  }
  #toc table {
    width: 100%;
  }
  .subject {
    margin-left: 20%;
  }
  aside {
    width: 30%;
  }
  #toc_list {
    height: 100%;
    overflow-x: hidden;
    overflow-y: auto;
  }
}

@media print {
  .page {
    position: relative;
    page-break-before: always;
    height: 40%;
    height: 17cm;
    overflow: hidden;
  }
  .page:first-child {
    page-break-before: avoid;
  }
  .subject {
    max-height: 100%;
    max-width: 50%;
  }
  .subject img {
    max-height: 100%;
    max-width: 100%;
  }
  aside {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 50%;
    background: rgba(255,255,255,0.5);
    padding: 1em;
  }

  .noprint {
    display: none;
  }

  .pageno {
    position: absolute;
    bottom: 0;
    right: 0;
  }
}
</style>
</head>
<body>
<div id="toc" class="noprint">
  <h1>Contents</h1>
  <div id="toc_list">
    <table>
  <% sections.each do |section| %>
    <% ref = section[:path].gsub(/[\/, ]/, '_') %>
    <tr>
      <td><a href="#<%=ref%>"><%= section[:path].gsub(/^.*public\/content\//, '') %></a></td>
      <td><a href="#<%=ref%>"><%= section[:pageno]%></a></td>
    </tr>
  <% end %>
    </table>
  </div>
</div>

<% sections.each do |section| %>
    <% ref = section[:path].gsub(/[\/, ]/, '_') %>
<section class="page">
  <a name="<%=ref%>"></a>
  <div class="subject">
    <% section[:imgs].each do |img| %>
      <img src="<%= img %>"/>
    <% end %>
  </div>
  <aside>
    <%= section[:annotations] %>
    <div class="noprint">(<%= section[:path] %>)</div>
    <div class="pageno">Page <%= section[:pageno] %></div>
  </aside>
</section>
<% end %>

</body>
</html>
